<h3>Listing TODOs</h3>
<%= link_to 'New todo', new_todo_path %>
<div id="todos">
  <% @todos.each do|todo| %>
  <div class="row-fluid" id="todo">
    <div class="span3"><%= todo.title %></div>
    <div class="span9"><%= todo.content %></div>
    <small>
      <%= link_to 'Edit', edit_todo_path(todo) %> |
      <%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %>
    </small>
  </div>
  <% end %>
</div>